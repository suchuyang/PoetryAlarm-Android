<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thissu.poetryalarm">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    //
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityModule.AlarmListActivity" />
        <activity android:name=".ActivityModule.AlarmDetailActivity" />
        <activity android:name=".ActivityModule.AlarmPendingActivity" />
        <activity android:name=".ActivityModule.EmptyActivity" />
        <activity android:name=".ActivityModule.RingtoneSelectActivity"></activity>
    </application>

</manifest>